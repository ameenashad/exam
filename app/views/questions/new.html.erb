<h3>Please Enter the details</h3>
<p>
	<%= form_for @question do |f| %>
	  <p>
	    <%= f.label :title %><br>
	    <%= f.text_field :title %>
	  </p>
	 
	  <p>
	    <%= f.label :description %><br>
	    <%= f.text_area :description %>
	  </p>

	  <p>
	  	<%= f.label :category %><br>
	    <%= f.select :category, ['Coding', 'Health', 'Spiritual'] %>
	  </p>
	 
	  <p>
	    <%= f.submit %>
	  </p>
	<% end %>
</p>
