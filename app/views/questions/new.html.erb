<h3>Please Enter the details</h3>
<p>
	<%= form_for @question do |f| %>
	  <p>
	    <%= f.label :title %><br>
	    <%= f.text_field :title %>
	  </p>
	 
	  <p>
	    <%= f.label :description %><br>
	    <%= f.text_area :description %>
	  </p>

	  <p>
	  	<%= f.label :category_id %><br>
	    <%= f.select :category_id, options_from_collection_for_select(@categories, :id, :name)%>
	  </p>
	 
	  <p>
	    <%= f.submit %>
	  </p>
	<% end %>
</p>
