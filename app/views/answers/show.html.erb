<p>
  <strong>Description:</strong>
  <%= @answer.description %>
</p>

<p>
  <%= form_for([@answer, @answer.comments.build]) do |f| %>
    <%= f.label :content %>
    <%= f.text_area :content %>
</p>
<p>
    <%= f.submit %>
  <% end %>

</p>

<h3>Comments</h3>
<p>
  <% @answer.comments.each do |comment| %>
    <p>
      <strong>Comments for Question:</strong> 
      <%= comment.content %>
    </p>
  <% end %>
</p>

